#items-container.files-list
    include ./controls
    +search(false, files.count, pages.search, pages)
    #all-files.list-container.bg-gradiants
        ul.list-group-flush
            for item in files.rows
                li.file.list-group-item(id=item.Id tabindex="0")
                    span.show-form                   
                        i.ml-1.fas.fa-edit
                    span.remove
                        i.fas.fa-trash-alt
                    span#item-name= item.Name