#items-container
    include ./controls
    +search(true, directories.length)
    #list-dirs.list-container
        ul.list-group-flush
            for item in directories
                li.list-group-item.popup-msg(id=item.Id data-title=item.Path tabindex="0")
                    span.update
                        i.text-primary.fas.fa-sync
                    span.remove
                        i.mx-1.text-danger.fas.fa-trash-alt
                    span#item-name= item.Name