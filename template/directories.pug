include ./controls
+search(true, directories.length)
#list-dirs.list-container.bg-gradiants
    ul.list-group-flush
        for item in directories
            li.list-group-item.popup-msg(id=item.Id data-title=item.Path tabindex="0")
                span.update
                    i.fas.fa-sync(class=""+(item.Scanning ? "fa-spin" : ""))
                span.remove
                    i.mx-1.fas.fa-trash-alt
                span#item-name= item.Name