        .list-titles
            .title
                span= listA.rows.length+" - Folders"
        include ./controls
        +search(buttonTest)
        #list-a.list-container
            ul.list-group-flush
                for item in listA.rows
                    li.list-group-item.popup-msg(id=item.Id data-title=item.Path tabindex="0")
                        span#item-name= item.Name
