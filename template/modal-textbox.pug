#modal-container
    #modal.card.bg-dark.text-light
        #modal-header.text-center
            h3= modalTitle
        #errors.text-danger.text-center
        .input-group.my-3
            .input-group-prepend
                label.input-group-text(for="name") Name
            input#name.form-control(required="" type="text" name="name" value=""+ name)
        
        .text-center.my-3
            button.btn.btn-secondary.close-modal(type="button") Cancel
            button#accept.btn.btn-primary.ml-2= btnAccept
        