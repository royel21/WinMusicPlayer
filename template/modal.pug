            .input-group-prepend
                label.input-group-text(for="name") Name
            input#name.form-control(required="" type="text" name="name" value=""+ (item ? item.Name : ""))
        
        .text-center.my-3
            button.btn.btn-secondary.close-modal(type="button") Cancel
            button#create-list.btn.btn-primary.ml-2 Create
        